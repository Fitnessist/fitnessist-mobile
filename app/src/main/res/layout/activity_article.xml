<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ArticleActivity" >

    <ImageView
        android:id="@+id/upcomingSessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.capstone_bangkit.fitnessist.customview.NormalEditText
        android:id="@+id/imgGoAllUpcomingSessions"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text"
        android:hint="Cari Judul"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/upcomingSessions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/upcomingSessions"
        app:layout_constraintTop_toTopOf="@+id/upcomingSessions"
        app:layout_constraintVertical_bias="0.55" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUpcomingSessionss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGoAllUpcomingSessions" />

</androidx.constraintlayout.widget.ConstraintLayout>